<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"
  xmlns:core="sap.ui.core" controllerName="converted.employeeformview.controller.EmployeeFormView" displayBlock="true"
          xmlns:commons="sap.ui.commons">
  <Page title="Employee Information" enableScrolling="true">
    <content>
      <form:SimpleForm id="employeeForm" editable="true" layout="ResponsiveGridLayout" title="Employee Details">
        <form:content>
          <Label id="labelFirstName" text="First Name" />
          <Input id="inputFirstName" placeholder="Enter first name" value="{employees>/employees/0/firstName}" />
          <Label id="labelLastName" text="Last Name" />
          <Input id="inputLastName" placeholder="Enter last name" value="{employees>/employees/0/lastName}" />
          <Label id="labelEmail" text="Email" />
          <Input id="inputEmail" placeholder="Enter email" value="{employees>/employees/0/email}" type="Email" />
          <Label id="labelDepartment" text="Department" />
          <Select id="dropdownDepartment" selectedKey="{employees>/employees/0/department}">
            <core:Item key="Sales" text="Sales" />
            <core:Item key="Marketing" text="Marketing" />
            <core:Item key="IT" text="IT" />
          </Select>
          <Label id="labelHireDate" text="Hire Date" />
          <DatePicker id="inputHireDate" value="{employees>/employees/0/hireDate}" displayFormat="yyyy-MM-dd" />
          <Button id="buttonSave" text="Save" type="Emphasized" press="onSavePress" tooltip="Save employee data" />
          <Button id="exportButton" text="Export to CSV" press="onExportToCSV" tooltip="Export to CSV" />
          <SearchField id="searchField" width="100%" search="onSearch" liveChange="onSearch" placeholder="Search Employees" />
          <Table id="employeeTable" items="{employees>/employees}" growing="true" growingThreshold="5">
            <columns>
              <Column id="firstNameColumn">
                <header>
                  <Text text="First Name" />
                </header>
              </Column>
              <Column id="lastNameColumn">
                <header>
                  <Text text="Last Name" />
                </header>
              </Column>
              <Column id="emailColumn">
                <header>
                  <Text text="Email" />
                </header>
              </Column>
              <Column id="departmentColumn">
                <header>
                  <Text text="Department" />
                </header>
              </Column>
              <Column id="hireDateColumn">
                <header>
                  <Text text="Hire Date" />
                </header>
              </Column>
            </columns>
            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{employees>firstName}" />
                  <Text text="{employees>lastName}" />
                  <Text text="{employees>email}" />
                  <Text text="{employees>department}" />
                  <Text text="{employees>hireDate}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </form:content>
      </form:SimpleForm>
    </content>
  </Page>
</mvc:View>